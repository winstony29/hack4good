# Backend Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/hack4good

# Supabase (for auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# JWT Settings
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ElevenLabs TTS (optional - leave empty for mock mode)
ELEVENLABS_API_KEY=

# Google Cloud Translation (optional - leave empty for mock mode)
# Option 1: Use API Key (simpler, recommended for development)
GOOGLE_TRANSLATE_API_KEY=your-api-key-here
# Option 2: Use Service Account (for production)
GOOGLE_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=

# Notification Settings
# Set to 'false' to use real Twilio (requires credentials below)
USE_MOCK_NOTIFICATIONS=true

# Twilio Credentials (only needed when USE_MOCK_NOTIFICATIONS=false)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_PHONE=+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890
